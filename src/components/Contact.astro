---
// Traditional button approach - no component import

interface Props {
  __typename?: "Contact";
  id?: string;
  whatsappLink: string;
  whatsappText?: string | null | undefined;
  _sys?: {
    __typename?: "SystemInfo";
    filename: string;
    basename: string;
    hasReferences?: boolean | null;
    breadcrumbs: string[];
    path: string;
    relativePath: string;
    extension: string;
  };
}

const { whatsappLink = "#", whatsappText = "Contact us on WhatsApp" } = Astro.props;
---

<section id="contact" class="py-16 bg-blue-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Get in Touch
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Ready to start your project? Contact us now!
      </p>
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors text-center">
        <img 
          src="/images/wasap.svg" 
          alt="WhatsApp" 
          width="24" 
          height="24"
          style="display: inline-block; vertical-align: middle; margin-right: 8px;"
        />
        <span>{whatsappText}</span>
      </a>
    </div>
  </div>
</section>

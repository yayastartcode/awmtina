---
import WhatsAppButton from './WhatsAppButton.astro';

interface Props {
  __typename?: "Contact";
  id?: string;
  whatsappLink: string;
  whatsappText?: string | null | undefined;
  _sys?: {
    __typename?: "SystemInfo";
    filename: string;
    basename: string;
    hasReferences?: boolean | null;
    breadcrumbs: string[];
    path: string;
    relativePath: string;
    extension: string;
  };
}

const { whatsappLink = "#", whatsappText = "Contact us on WhatsApp" } = Astro.props;
---

<section id="contact" class="py-16 bg-blue-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Get in Touch
      </h2>
      <p class="text-lg text-gray-600 mb-8">
        Ready to start your project? Contact us now!
      </p>
      <WhatsAppButton
        whatsappLink={whatsappLink}
        whatsappText={whatsappText}
        buttonClass="inline-flex items-center px-8 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors"
        iconClass="w-6 h-6 mr-2"
      />
    </div>
  </div>
</section>

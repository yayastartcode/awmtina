---
interface Props {
  whatsappLink: string;
  whatsappText?: string | null | undefined;
  buttonClass?: string;
  iconClass?: string;
  showIcon?: boolean;
}

const {
  whatsappLink = "#",
  whatsappText = "Contact us on WhatsApp",
  buttonClass = "inline-flex items-center px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors",
  iconClass = "w-5 h-5 mr-2",
  showIcon = true
} = Astro.props;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class={`${buttonClass} block w-full sm:w-auto`}
  style="
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    appearance: none !important;
    position: relative;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    text-decoration: none;
    touch-action: manipulation;
    user-select: none;
    -webkit-user-select: none;
    -webkit-tap-highlight-color: transparent;
  "
>
  {showIcon && (
    <img 
      src="/images/wasap.svg" 
      alt="WhatsApp" 
      class={`${iconClass}`}
      style="display: inline-block; max-width: 100%; height: auto;" 
      width="24"
      height="24"
    />
  )}
  <span style="display: inline-block;">{whatsappText}</span>
</a>
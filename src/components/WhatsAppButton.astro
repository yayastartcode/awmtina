---
interface Props {
  whatsappLink: string;
  whatsappText?: string | null | undefined;
  buttonClass?: string;
  iconClass?: string;
  showIcon?: boolean;
}

const {
  whatsappLink = "#",
  whatsappText = "Contact us on WhatsApp",
  buttonClass = "inline-flex items-center px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors",
  iconClass = "w-5 h-5 mr-2",
  showIcon = true
} = Astro.props;
---

<a
  href={whatsappLink}
  target="_blank"
  rel="noopener noreferrer"
  class={`${buttonClass} flex justify-center items-center`}
  style="display: -webkit-inline-flex; -webkit-align-items: center;"
>
  {showIcon && (
    <img src="/images/wasap.svg" alt="WhatsApp" class={`${iconClass} flex-shrink-0`} style="display: block;" />
  )}
  <span style="display: inline-block;">{whatsappText}</span>
</a>